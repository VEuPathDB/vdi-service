{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "studyTypeDefinition": {
      "title": "Study Type Definition",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "minLength": 3
        },
        "designs": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 3
          },
          "minLength": 1,
          "uniqueItems": true,
          "unevaluatedItems": false
        }
      },
      "required": [
        "displayName",
        "designs"
      ]
    },
    "sharedDefinitions": {
      "type": "object",
      "properties": {
        "studyTypes": {
          "type": "array",
          "items": { "$ref": "#/$defs/studyTypeDefinition" },
          "minItems": 1,
          "uniqueItems": true,
          "unevaluatedItems": false
        }
      },
      "additionalProperties": true,
      "required": [ "studyTypes" ]
    }
  },
  "type": "object",
  "allOf": [
    {
      "properties": {
        "sharedDefinitions": { "$ref": "#/$defs/sharedDefinitions" }
      }
    },
    {
      "$comment": "Included to help IDEs with autocomplete.",
      "properties": {
        "$defs": { "type": "object" },
        "$schema": { "type": "string" },
        "allOf": { "type": "array" },
        "properties": { "type": "object" },
        "required": { "type": "array" },
        "title": { "type": "string" },
        "type": { "const": "object" },
        "unevaluatedProperties": { "type": "boolean" }
      }
    },
    { "$ref": "https://json-schema.org/draft/2020-12/schema#" }
  ],
  "unevaluatedProperties": false
}
