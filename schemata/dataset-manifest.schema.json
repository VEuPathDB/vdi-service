{
  "$schema": "https://json-schema.org/draft-07/schema",

  "title": "VDI Dataset Manifest",

  "type": "object",
  "additionalProperties": false,

  "properties": {
    "inputFiles": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "uniqueItems": true,
      "additionalItems": false
    },
    "dataFiles": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "uniqueItems": true,
      "additionalItems": false
    }
  },

  "required": [
    "inputFiles",
    "dataFiles"
  ]
}