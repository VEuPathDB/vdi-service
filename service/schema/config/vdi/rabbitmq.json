{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://veupathdb.github.io/vdi-service/schema/vdi/rabbitmq.json",
  "title": "RabbitMQ Configuration",
  "type": "object",
  "properties": {
    "pollInterval": {
      "$ref": "../common.json#/$defs/duration",
      "default": "1s"
    },
    "connection": {
      "$ref": "#/$defs/connection"
    },
    "exchange": {
      "$ref": "#/$defs/exchange"
    },
    "queue": {
      "$ref": "#/$defs/queue"
    },
    "routing": {
      "$ref": "#/$defs/routing"
    }
  },
  "required": [
    "connection",
    "exchange",
    "queue"
  ],
  "additionalProperties": false,
  "$defs": {
    "connection": {
      "type": "object",
      "properties": {
        "name": {
          "title": "Connection Name",
          "description": "Used in RabbitMQ error logging in the RabbitMQ instance as well as the RabbitMQ Java library.",
          "type": "string",
          "default": "vdi"
        },
        "server": {
          "title": "RabbitMQ Server Details",
          "description": "Port defaults to `5671` with TLS enabled, or `5672` with TLS disabled.",
          "oneOf": [
            {
              "$ref": "../common.json#/$defs/addressString"
            },
            {
              "$ref": "../common.json#/$defs/interpolatedValue"
            },
            {
              "$ref": "../common.json#/$defs/addressObject"
            }
          ],
          "examples": [
            "rabbit.site.com",
            "rabbit.site.com:5671",
            { "host": "rabbit.site.com" },
            { "host": "rabbit.site.com", "port": "5672" }
          ]
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "tls": {
          "type": "boolean",
          "default": true
        },
        "timeout": {
          "$ref": "../common.json#/$defs/duration"
        }
      },
      "required": [
        "server",
        "username",
        "password"
      ],
      "additionalProperties": false
    },
    "exchange": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "enum": [
            "direct",
            "fanout",
            "topic"
          ],
          "default": "direct"
        },
        "autoDelete": {
          "type": "boolean",
          "default": false
        },
        "durable": {
          "type": "boolean",
          "default": true
        },
        "arguments": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "queue": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "autoDelete": {
          "type": "boolean",
          "default": false
        },
        "durable": {
          "type": "boolean",
          "default": true
        },
        "exclusive": {
          "type": "boolean",
          "default": false
        },
        "arguments": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "routing": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string"
        },
        "arguments": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  }
}
