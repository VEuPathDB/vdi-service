{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://veupathdb.github.io/vdi-service/schema/common.json",
  "$defs": {
    "duration": {
      "title": "Duration String",
      "type": "string",
      "pattern": "^(?=.{2,})((?:\\d+d)? ?(?:(?<!\\S)\\d+h)? ?(?:(?<!\\S)\\d+m)? ?(?:(?<!\\S)\\d+(?:\\.\\d+s$|s))? ?(?:(?<!\\S)\\d+(?:\\.\\d+ms$|ms))? ?(?:(?<!\\S)\\d+(?:\\.\\d+us$|us))? ?(?:(?<!\\S)\\d+ns)?)$",
      "examples": [
        "1d 12h 32m 30.340s",
        "12s",
        "1h 22us 5ns"
      ]
    },
    "hostCsv": {
      "title": "Comma Separated Host:Port List",
      "type": "string",
      "pattern": "^(?:(?=[\\da-zA-Z.-]{1,253}(?::|$))([\\da-zA-Z][\\da-zA-Z-]{0,62}(?:\\.[\\da-zA-Z][\\da-zA-Z-]{0,62})*):([1-9]\\d{0,3}|[1-5]\\d{4}|6(?:[0-4]\\d{3}|5(?:[0-4]\\d{2}|5(?:[0-2]\\d|3[0-5]))))(?:,(?=.+)|$))+$",
      "examples": [
        "something:8080",
        "foo.com:1234"
      ]
    },
    "hostObject": {
      "title": "Host Config Object",
      "type": "object",
      "properties": {
        "host": {
          "type": "string",
          "pattern": "^(?=[\\da-zA-Z.-]{1,253})([\\da-zA-Z][\\da-zA-Z-]{0,62}(?:\\.[\\da-zA-Z][\\da-zA-Z-]{0,62})*)$",
          "minLength": 1,
          "maxLength": 253
        },
        "port": {
          "$ref": "#/$defs/port"
        }
      },
      "examples": [
        {
          "host": "abc.def.com",
          "port": 1234
        },
        {
          "host": "abc.def.com"
        }
      ],
      "required": [
        "host"
      ]
    },
    "hostString": {
      "title": "Single Host:Port",
      "type": "string",
      "pattern": "^(?=[\\da-zA-Z.-]{1,253}:)([\\da-zA-Z][\\da-zA-Z-]{0,62}(?:\\.[\\da-zA-Z][\\da-zA-Z-]{0,62})*):([1-9]\\d{0,3}|[1-5]\\d{4}|6(?:[0-4]\\d{3}|5(?:[0-4]\\d{2}|5(?:[0-2]\\d|3[0-5]))))$",
      "examples": [
        "something:8080",
        "foo.com:1234"
      ]
    },
    "installTarget": {
      "title": "Dataset Installation Target",
      "enum": [
        "AmoebaDB",
        "ClinEpiDB",
        "CryptoDB",
        "FungiDB",
        "GiardiaDB",
        "HostDB",
        "MicrobiomeDB",
        "MicrosporidiaDB",
        "OrthoMCL",
        "PiroplasmaDB",
        "PlasmoDB",
        "ToxoDB",
        "TrichDB",
        "TriTrypDB",
        "VectorBase",
        "VEuPathDB"
      ]
    },
    "interpolatedValue": {
      "title": "Interpolated String",
      "description": "String that will be interpolated using the service environment.\n\n* Any number of variables may be used.\n* Variables may include default values in the format `${env:VARIABLE_NAME:-DEFAULT_VALUE}`.\n* Variable default values may also include variables.",
      "type": "string",
      "pattern": "^.*\\$\\{env:[^}]{3,}\\}.*$",
      "examples": [
        "${env:FOO}",
        "${env:FOO:-bar}",
        "a ${env:VARIABLE} in the middle of a string",
        "${env:RECURSIVE:-${env:DEFAULT:-${env:VALUE:-RESOLUTION}}}"
      ]
    },
    "ldap": {
      "title": "LDAP Connection Configuration",
      "type": "object",
      "properties": {
        "servers": {
          "title": "LDAP Server List",
          "description": "List of servers that container core will use to lookup database details.  Servers will be tried in the order they are defined.",
          "oneOf": [
            {
              "title": "Host Strings",
              "type": "array",
              "items": {
                "$ref": "#/$defs/hostString"
              },
              "unevaluatedItems": false
            },
            {
              "title": "Host Details",
              "type": "array",
              "items": {
                "$ref": "#/$defs/hostObject"
              },
              "unevaluatedItems": false
            },
            {
              "$ref": "#/$defs/hostCsv"
            },
            {
              "$ref": "#/$defs/interpolatedValue"
            }
          ]
        },
        "baseDn": {
          "type": "string"
        }
      },
      "required": [
        "servers",
        "baseDn"
      ]
    },
    "port": {
      "title": "Connection Port",
      "type": "integer",
      "minimum": 1,
      "maximum": 65535
    },
    "database": {
      "title": "Database Connection Config",
      "type": "object",
      "allOf": [
        {
          "title": "Basic Options",
          "properties": {
            "username": {
              "type": "string",
              "minLength": 3
            },
            "password": {
              "type": "string",
              "minLength": 8
            },
            "poolSize": {
              "type": "integer",
              "minimum": 5,
              "maximum": 32,
              "default": 5
            }
          },
          "required": [
            "username",
            "password"
          ]
        },
        {
          "oneOf": [
            {
              "title": "LDAP Common Name",
              "properties": {
                "lookupCn": {
                  "type": "string",
                  "minLength": 3
                }
              },
              "required": [
                "lookupCn"
              ]
            },
            {
              "title": "Direct Connection Config",
              "properties": {
                "server": {
                  "title": "Database Host Details",
                  "oneOf": [
                    {
                      "$ref": "#/$defs/hostString"
                    },
                    {
                      "$ref": "#/$defs/hostObject"
                    },
                    {
                      "$ref": "#/$defs/interpolatedValue"
                    }
                  ]
                },
                "name": {
                  "title": "Database/Userspace Name",
                  "type": "string"
                },
                "platform": {
                  "enum": [
                    "oracle",
                    "postgres"
                  ],
                  "default": null
                }
              },
              "required": [
                "server",
                "name",
                "platform"
              ]
            }
          ]
        }
      ],
      "unevaluatedProperties": false
    }
  }
}
