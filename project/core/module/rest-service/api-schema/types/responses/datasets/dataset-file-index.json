{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "Dataset File Index",
  "properties": {
    "dataFiles": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/archive" },
      "unevaluatedProperties": false,
      "minProperties": 1
    },
    "metaFiles": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/file" },
      "unevaluatedProperties": false,
      "minProperties": 0
    }
  },
  "required": [ "dataFiles" ],
  "unevaluatedProperties": false,
  "$defs": {
    "archive": {
      "title": "Dataset File Archive",
      "allOf": [
        { "$ref": "#/$defs/file" },
        {
          "type": "object",
          "properties": {
            "contents": {
              "type": "array",
              "items": { "$ref": "#/$defs/file" },
              "minItems": 1,
              "uniqueItems": true,
              "unevaluatedItems": false
            }
          },
          "required": [ "contents" ]
        }
      ],
      "unevaluatedProperties": false
    },
    "file": {
      "title": "Dataset File",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256
        },
        "size": { "$ref": "#/$defs/fileSize" }
      },
      "unevaluatedProperties": false,
      "required": [
        "name",
        "size"
      ]
    },
    "fileSize": {
      "type": "integer",
      "format": "int64",
      "minimum": 0,
      "maximum": 18446744073709551615,
      "x-unsigned": true
    }
  }
}