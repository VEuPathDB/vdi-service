{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Dataset Hyperlink",
  "type": "object",
  "properties": {
    "url": {
      "type": "string",
      "minLength": 7,
      "maxLength": 200
    },
    "text": {
      "type": "string",
      "minLength": 3,
      "maxLength": 300
    },
    "description?": {
      "type": "string",
      "maxLength": 4000
    },
    "isPublication?": {
      "type": "boolean",
      "default": false
    }
  },
  "required": [
    "url",
    "text"
  ],
  "unevaluatedProperties": false
}