{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "Dataset File Index",
  "properties": {
    "importReady": { "$ref": "#/$defs/archive" },
    "installReady": { "$ref": "#/$defs/archive" },
    "documents": {
      "type": "array",
      "items": { "$ref": "../../../../_common/_types/file-info.json" },
      "unevaluatedItems": false
    }
  },
  "required": [ "importReady" ],
  "unevaluatedProperties": false,
  "$defs": {
    "archive": {
      "title": "Dataset File Archive",
      "type": "object",
      "properties": {
        "contents": {
          "type": "array",
          "items": { "$ref": "../../../../_common/_types/file-info.json" },
          "minItems": 1,
          "uniqueItems": true,
          "unevaluatedItems": false
        }
      },
      "required": [ "contents" ],
      "allOf": [ { "$ref": "../../../../_common/_types/file-info.json" } ],
      "unevaluatedProperties": false
    }
  }
}